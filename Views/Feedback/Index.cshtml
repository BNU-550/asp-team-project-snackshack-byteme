@model IEnumerable<Snack_Shack.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<h1>Feedback</h1>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeedbackMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerReviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackMessage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerReviewDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderID)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.FeedbackID"
                   class="btn btn-success">Edit</a> |*@

                <a asp-action="Details" asp-route-id="@item.FeedbackID"
                   class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FeedbackID"
                   class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
