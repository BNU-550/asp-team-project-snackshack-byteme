@model IEnumerable<Snack_Shack.Models.Order>

@{
    ViewData["Title"] = "Index";
}


<h1>Orders</h1>
<br />
<p>
    <a class="btn btn-success"asp-action="Create">New Order</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.PaymentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback.FeedbackID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderID"
                    class="btn btn-success">Edit</a> |
                <a asp-action="OrderDetails" asp-route-id="@item.OrderID"
                    class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderID"
                     class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
