@model Snack_Shack.Models.Food

@{
    ViewData["Title"] = "FoodDetails";
    string filter = (string)ViewData["Food"];
}
<br />

<style>
    body {
        background-color: #FFE8E8;
    }
</style>

<div class="container page-hero d-flex align-items-center justify-content-center card border-0" style="background-color: #FFE8E8; border: none;">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center" style="background-color: #FFE8E8; border: none; width: 40rem;">
                <card-img-top>
                    <img src="/images/@Model.Product.ImageURL" height=250 width=250 alt="ImageURL"  style="border-radius: 10%" />
                    <div class="card-body" style="background-color: #FFE8E8; border: none;">
                        <h3 class="card-title page-hero d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.Product.Name)</h3>
                        <p class="card-text page-hero d-flex align-items-center justify-content-center">@Html.DisplayFor(model => model.Product.Description)</p>
                    </div>
                    <ul class="list-group list-group-flush page-hero d-flex align-items-center justify-content-center">
                        <li class="list-group-item" style="background-color: #FFE8E8; border-color: #FF5757; ">Calories: @Html.DisplayFor(model => model.Calories)</li>
                        <li class="list-group-item" style="background-color: #FFE8E8; border-color: #FF5757; ">Contains Nuts: @Html.DisplayFor(c => c.ContainsNuts)</li>
                        <li class="list-group-item" style="background-color: #FFE8E8; border-color: #FF5757; ">Contains Gluten: @Html.DisplayFor(c => c.ContainsGluten)</li>
                        <li class="list-group-item" style="background-color: #FFE8E8; border-color: #FF5757; ">Suitable for Vegetarians: @Html.DisplayFor(c => c.IsVegetarian)</li>
                        <li class="list-group-item" style="background-color: #FFE8E8; border-color: #FF5757; ">Suitable for Vegans: @Html.DisplayFor(c => c.IsVegan)</li>
                    </ul>
            </div>
        </div>
    </div>
</div>


