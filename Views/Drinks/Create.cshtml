@model Snack_Shack.Models.Drink

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Drink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrinkCategory" class="control-label"></label>
                <select asp-for="DrinkCategory" class="form-control"></select>
                <span asp-validation-for="DrinkCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory" class="control-label"></label>
                <select asp-for="SubCategory" class="form-control"></select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ContainsAlcohol" /> @Html.DisplayNameFor(model => model.ContainsAlcohol)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AlcoholPercentage" class="control-label"></label>
                <input asp-for="AlcoholPercentage" class="form-control" />
                <span asp-validation-for="AlcoholPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkBrand" class="control-label"></label>
                <input asp-for="DrinkBrand" class="form-control" />
                <span asp-validation-for="DrinkBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <select asp-for="ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
